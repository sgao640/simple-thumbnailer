# Database Configuration (CONTENT_PG_*)
CONTENT_PG_HOST=localhost
CONTENT_PG_PORT=5432
CONTENT_PG_DATABASE=powercard_db
CONTENT_PG_USER=content
CONTENT_PG_PASSWORD=pwd

# AWS S3 / MinIO Configuration (AWS_*)
AWS_REGION=us-east-1
AWS_S3_BUCKET=mymusic
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_S3_ENDPOINT=http://localhost:9000
AWS_S3_PRESIGN_DURATION=3600

# Storage Backend Configuration
USE_IN_MEMORY=false
STORAGE_BACKEND=s3
URL_STRATEGY=storage-delegated

# NATS Configuration
NATS_URL=nats://127.0.0.1:4222

# Worker Configuration
THUMB_DIR=./data/thumbs
THUMB_WIDTH=512
THUMB_HEIGHT=512

# Thumbnail sizes: name:widthxheight (comma separated)
THUMBNAIL_SIZES=small:150x150,medium:512x512,large:1024x1024

# Simple-process job configuration
PROCESS_SUBJECT=simple-process.jobs
PROCESS_QUEUE=thumbnail-workers

# Result subject for publishing completion events
SUBJECT_IMAGE_THUMBNAIL_DONE=images.thumbnail.done
